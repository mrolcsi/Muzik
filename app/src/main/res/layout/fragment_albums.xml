<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="viewModel"
      type="hu.mrolcsi.muzik.ui.albums.AlbumsViewModel" />

    <variable
      name="theme"
      type="androidx.lifecycle.LiveData&lt;hu.mrolcsi.muzik.data.model.theme.Theme&gt;" />
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@{theme.backgroundColor}"
      android:fitsSystemWindows="true"
      app:liftOnScroll="true">

      <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/albums_title"
        app:titleTextColor="@{theme.foregroundColor}" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvAlbums"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:dividerColor="@{theme.foregroundColor}"
      app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
      app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
      app:spanCount="@integer/albumsColumnCount"
      tools:listitem="@layout/list_item_album_vertical" />

    <com.l4digital.fastscroll.FastScroller
      android:id="@+id/fastScroller"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:bubbleColor="@{theme.foregroundColor}"
      app:bubbleSize="small"
      app:bubbleTextColor="@{theme.backgroundColor}"
      app:handleColor="@{theme.foregroundColor}"
      app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
      app:sectionIndexer="@{viewModel}"
      app:showBubble="true"
      app:showTrack="true"
      app:trackColor="@{theme.foregroundColor}" />

  </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
